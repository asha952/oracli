FROM python:3

WORKDIR /app

COPY . /app

RUN pip install --no-cache-dir -r ./server/requirements.txt

ARG DATABASE_URL=${DATABASE_URL}
ARG APP_SETTINGS=${APP_SETTINGS}
ARG MONGO_INITDB_ROOT_USERNAME=${MONGO_INITDB_ROOT_USERNAME}
ARG MONGO_INITDB_ROOT_PASSWORD=${MONGO_INITDB_ROOT_PASSWORD}
ARG SECRET_KEY=${SECRET_KEY}

EXPOSE 5000
CMD [ "python", "./server/run.py" ]